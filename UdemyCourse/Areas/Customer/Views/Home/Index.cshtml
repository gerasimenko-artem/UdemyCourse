@using System.Globalization;
@model IEnumerable<Product>

<div class="row pb-3">
	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded">
						<img src="@product.ImageURL" class="card-img-top rounded mx-auto d-block" style="width: 80%">
						<div class="card-body pb-1">
							<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
							<p class="card-title text-warning text-center">by <b>@product.Author</b></p>
							<div class="pb-1">
								<p class="text-dark text-opacity-75 text-center mb-0">
									List Prise:  
									<span class="text-decoration-line-through">
										@product.ListPrice.ToString("C", new CultureInfo("en-US"))
									</span>
								</p>
							</div>
							<div class="pb-1">
								<p class="text-dark text-opacity-75 text-center">
									As low as:
									<span>
										@product.Price100.ToString("C", new CultureInfo("en-US"))
									</span>
								</p>
							</div>
						</div>
						<div>
							<a asp-action="DetailsHome" asp-route-productId="@product.ProductId"
							class="btn btn-primary bg-gradient border-0 form-control">
								Details
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>
