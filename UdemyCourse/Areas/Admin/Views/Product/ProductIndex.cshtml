@model List<Product>


<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Product List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-4">
			<div class="col-6 col-lg-3 text-center mb-3">
				<a asp-controller="Home" asp-action="Index" class=" btn btn-outline-primary border-1 form-control border-secondary">
					<small>Back to home</small>
				</a>
			</div>
			<div class="col-6 col-lg-3 offset-lg-6  text-end">
				<a asp-controller="Product" asp-action="ProductUpsert" class=" btn btn-primary border-1 form-control border-secondary">
					<i class="bi bi-plus"></i> <small>Create New Product</small>
				</a>
			</div>
			
		</div>
		<div class="table-responsive">
			<table id="tblData" class="table table-bordered table-striped text-center">
				<thead class="border">
					<tr>
						<td class="text-center hidden-xs">Title</td>
						<td class="text-center hidden-xs">Author</td>
						<td class="text-center hidden-xs">ISBN</td>
						<td class="text-center hidden-xs">Price</td>
						<td class="text-center hidden-xs">Category</td>
						<td class="text-center hidden-xs"></td>
					</tr>
				</thead>
			</table>
		</div>

	</div>
</div>

@section Scripts{
	<script src="/js/product.js"></script>
}